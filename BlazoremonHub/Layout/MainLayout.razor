@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Blazorémon Hub</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Light" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudAppBar Bottom="@true" Dense="@true">
        <MudText Align="Align.Center" Class="flex-auto">Powered by .NET @Environment.Version</MudText>
    </MudAppBar>
</MudLayout>
